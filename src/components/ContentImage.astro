---
import { Image } from "astro:assets";

interface Props {
    src: string;
    alt: string;
}

const {src, alt} = Astro.props;
---

<div>
    <img src={src} alt={alt} class="img" />
</div>

<style>
    .img {
        display: block;
        width: 750px;
        margin: auto;
    }

    @media (width <= 900px) {
        .img {
            width: 500px;
        }
    }

    @media (width <= 550px) {
        .img {
            width: 350px;
        }
    }
</style>