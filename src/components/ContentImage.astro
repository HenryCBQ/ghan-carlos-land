---
import { Image } from "astro:assets";

interface Props {
    src: string;
    alt: string;
    width: number;
    height: number;
}

const {src, alt, width,height} = Astro.props;
---

<div>
    <Image
      src={src}
      alt={alt}
      width={width}
      height={height}
      class="img"
    />
</div>

<style>
    .img {
        display: block;
        width: 750px;
        margin: auto;
    }

    @media (width <= 900px) {
        .img {
            width: 500px;
        }
    }

    @media (width <= 550px) {
        .img {
            width: 350px;
        }
    }
</style>