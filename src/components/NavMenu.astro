---
import ModalContact from "@components/ModalContact.astro"
---

<nav>
    <div>
        <a href="/">Inicio</a>
        <span>|</span>
        <a href="/services">Servicios</a>
        <span>|</span>
        <button id="show-contact-dialog">Contacto</button>
        <span>|</span>
        <a href="/profile-ghan-carlos">Perfil Ghan Carlos Areiza</a>
    </div>

    <dialog id="dialog-contact">
        <form>
            <button formmethod="dialog">
                <img src="/icon_close_modal.svg" alt="Ícono para cerrar ventana modal">
            </button>
        </form>
        <ModalContact />
    </dialog>
</nav>

<style>
    nav {
        background-color: #0070C0;     
        padding: 18px;
        display: flex;
        justify-content: end;
    }

    div {
        width: 50%;
        display: flex;
        justify-content: space-between;
    }

    dialog {
        width: 50%;
        border: none;
    }

    button {
        background: none;
        border: none;
    }

    a, button {
        text-transform: uppercase;
    }

    a,span,button {
        color: white;
        font-weight: bold;
        font-size: large;
    }

    a:hover {
        color: #eeededee;
    }

    button:hover {
        color: #eeededee;
        cursor: pointer;
    }
</style>

<script>
    const showButton = document.querySelector("#show-contact-dialog");
    if (showButton) {
        showButton.addEventListener("click", function () {
            const alertDialog = document.querySelector("#dialog-contact") as HTMLDialogElement;
            alertDialog.showModal();
        });
    }
</script>